                            },
                            failure: function (form, action) {
                                Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");
                            }
                        });
                    }
                }, {
                    text: '关闭',
                    handler: function () {
                        updatewin.close();
                    }
                }]
            });
            updatewin.show();

        }

        //删除菜单

        function DeleteProdct(data) {

            Ext.Ajax.request({
                waitMsg: '正在提交...',
                url: '@Url.Content("~/Product/DeleteProduct")',
                params: {
                    Name: data.Name,
                    Code: data.Code,
                    PicURL: data.PicURL,
                    Price: data.Price,
                    Instruction: data.Instruction,
                    Remark: data.Remark,
                    ID: data.ID,
                    ProductTypeID: data.ProductTypeID
                },
                success: function (form, action) {
                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，删除成功~');
                    store.load();

                },
                failure: function (form, action) {
                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据删除失败~");
                }
            });
        }

        //更新内容

        function UpdateProductType(data) {
            var formpanel = new Ext.form.FormPanel({
                baseCls: 'x-plain',
                autoHeight: true,
                autoWidth: true,
                layout: 'form',
                defaultType: 'textfield',
                items: [
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: '类型名称',
                        id: 'Name',
                        labelWidth: 50,
                    },
                     {
                         xtype: 'textfield',
                         readOnly: false,
                         fieldLabel: '类型编号',
                         id: 'TypeCode',
                         labelWidth: 50,
                     },
                    {
                        xtype: 'hidden',
                        id: 'ID'
                    }]
            });
            var updatewin = new Ext.Window({
                modal: true,
                title: '修改产品类型',
                closable: false,
                width: 600,
                height: 400,
                maximized: false,
                layout: 'form',
                plain: true,
                items: formpanel,
                buttons: [{
                    text: '保存',
                    handler: function () {
                        Ext.Ajax.request({
                            waitMsg: '正在提交...',
                            url: '@Url.Content("~/Product/UpdateProductType")',
                                params: {
                                    ID: Ext.getDom("ID").value,
                                    Name: Ext.getDom("Name").value,
                                    TypeCode: Ext.getDom("TypeCode").value
                                },
                                success: function (form, action) {
                                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，保存成功~');
                                    tree.root.reload();
                                },
                                failure: function (form, action) {
                                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");

                                }
                            });
                            //if (tree.getSelectionModel().selNode) {
                            //    if (tree.getSelectionModel().selNode.leaf == true) {

                            //    } else {
                            //        Ext.Msg.alert("警告", "操作有错误，请先选中“子节点”,然后进行操作~");
                            //    }

                            //} else {
                            //    Ext.Msg.alert("警告", "操作有错误，请先选中节点,然后进行操作~");
                            //}
                        }
                    }, {
                        text: '关闭',
                        handler: function () {
                            updatewin.close();
                        }
                    }]
                });
                updatewin.show();

                Ext.getDom("ID").value = data.ID;

                Ext.getDom("Name").value = data.Name;

                Ext.getDom("TypeCode").value = data.TypeCode;

            }

            //增加内容
            function AddProductType() {
                var formpanel = new Ext.form.FormPanel({
                    baseCls: 'x-plain',
                    autoHeight: true,
                    autoWidth: true,
                    layout: 'form',
                    defaultType: 'textfield',
                    items: [
                        {
                            xtype: 'textfield',
                            readOnly: false,
                            fieldLabel: '类型名称',
                            id: 'Name',
                            labelWidth: 50,
                        },
                         {
                             xtype: 'textfield',
                             readOnly: false,
                             fieldLabel: '类型编号',
                             id: 'TypeCode',
                             labelWidth: 50,
                         },
                        {
                            xtype: 'hidden',
                            id: 'ID'
                        }]
                });
                var updatewin = new Ext.Window({
                    modal: true,
                    title: '添加产品类型',
                    closable: false,
                    width: 600,
                    height: 400,
                    maximized: false,
                    layout: 'form',
                    plain: true,
                    items: formpanel,
                    buttons: [{
                        text: '保存',
                        handler: function () {
                            Ext.Ajax.request({
                                waitMsg: '正在提交...',
                                url: '@Url.Content("~/Product/AddProductType")',
                                params: {
                                    ID: Ext.getDom("ID").value,
                                    Name: Ext.getDom("Name").value,
                                    TypeCode: Ext.getDom("TypeCode").value
                                },
                                success: function (form, action) {
                                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，保存成功~');
                                    tree.root.reload(); 
                                },
                                failure: function (form, action) {
                                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");

                                }
                            });

                        }
                    }, {
                        text: '关闭',
                        handler: function () {
                            updatewin.close();
                        }
                    }]
                });
                updatewin.show();

            }

            function DeleteProductType(data) {
                Ext.Ajax.request({
                    waitMsg: '正在提交...',
                    url: '@Url.Content("~/Product/DeleteProductType")',
                params: {
                    ID: data.ID,
                    Name: data.Name,
                    TypeCode: data.TypeCode
                },
                success: function (form, action) {
                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，删除成功~');
                    tree.root.reload(); 
                },
                failure: function (form, action) {
                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据删除失败~");
                }
            });
        }

        var store = new Ext.data.Store({
            proxy: new Ext.data.HttpProxy({
                url: "@Url.Content("~/Product/ProductList")",
                }
            ),
                reader: new Ext.data.JsonReader({},
                    [
                        { name: 'ID' },
                        { name: 'Name' },
                        { name: 'Code' },
                        { name: 'PicURL' },
                        { name: "Price" },
                        { name: "Instruction" },
                        { name: "Remark" },
                        { name: "ProductTypeID" }
                    ]
                )
            });

                var grid = new Ext.grid.GridPanel({
                    height: '100%',
                    width: '80%',
                    title: '产品列表',
                    store: store,
                    columnLines: true,
                    trackMouseOver: false,
                    disableSelection: true,
                    loadMask: true,
                    columns: [
                        { id: 'ID', header: "ID", dataIndex: 'ID', width: 10, sortable: true },
                        { header: "产品名称", dataIndex: 'Name', width: 10, hidden: false, sortable: true },
                        { header: "产品编号", dataIndex: 'Code', width: 10, hidden: false, sortable: true },
                        { header: "图片地址", dataIndex: 'PicURL', width: 10, align: 'right', sortable: true },
                        { header: "价格", dataIndex: 'Price', width: 10, sortable: true },
                        { header: "产品介绍", dataIndex: 'Instruction', width: 10, sortable: true },
                        { header: "产品备注", dataIndex: 'Remark', width: 10, sortable: true },
                        { header: "类型ID", dataIndex: 'ProductTypeID', width: 10, sortable: true },
                        {
                            header: '操作',
                            width: 20,
                            dataIndex: 'ID',
                            align: "center",
                            renderer: function (data, cellmeta, record) {
                                record.data.Instruction = Ext.util.Format.htmlEncode(record.data.Instruction);
                                var returnStr = "<INPUT type='button' id='btnAdd' value='增加' onclick='AddProduct()' />  <INPUT type='button' id='btnUpdate' value='修改' onclick='UpdateProduct(" + Ext.encode(record.data) + ")' /> <INPUT type='button' value='删除' id='btnDelete' onclick='DeleteProduct(" + Ext.encode(record.data) + ")'/>";
                                return returnStr;
                            }
                        }
                    ],
                    viewConfig: {
                        loadMask: true,
                        forceFit: true
                    },
                    tbar: new Ext.Toolbar([{
                        text: '添加文章',
                        icon: 'icons/add.gif',
                        handler: function () {
                            AddProduct();
                        }
                    }]),
                    bbar: new Ext.PagingToolbar({
                        pageSize: 50,
                        store: store,
                        displayInfo: true,
                        displayMsg: '当前{0}到{1}条,共{2}条',
                        emptyMsg: '没有符合条件的数据'
                    })
                });

                var treeloader = new Ext.tree.TreeLoader({
                    url: '@Url.Content("~/Product/TreeNodeJson")'
            });

            var tree = new Ext.tree.TreePanel({
                fix: 1,
                title: '产品分类',
                height: '100%',
                width: '20%',
                useArrows: true,
                autoScroll: true,
                animate: true,
                enableDD: true,
                containerScroll: true,
                rootVisible: false,
                frame: true,
                root: {
                    nodeType: 'async'
                },

                loader: treeloader,

                listeners: {
                    'checkchange': function (node, checked) {
                        if (checked) {
                            node.getUI().addClass('complete');
                        } else {
                            node.getUI().removeClass('complete');
                        }
                    }
                },

                buttons: [
                    {
                        text: '添加产品分类',
                        width: 30,
                        handler: function () {
                            AddProductType();
                        }
                    }, {
                        text: '修改产品分类',
                        width: 30,
                        handler: function () {
                            if (tree.getSelectionModel().selNode) {
                                if (tree.getSelectionModel().selNode.leaf == true) {
                                    var id = tree.getSelectionModel().selNode.id;
                                    var text = tree.getSelectionModel().selNode.text;
                                    var typecode = tree.getSelectionModel().selNode.attributes.type;
                                    UpdateProductType({ 'ID': id, 'Name': text, 'TypeCode': typecode });
                                    //var pnodetext = tree.getSelectionModel().selNode.parentNode.text;
                                }
                            } else {
                                Ext.Msg.alert("警告", "操作有错误，请先选中节点,然后进行操作~");
                            }
                        }
                    }, {
                        text: '删除产品分类',
                        width: 30,
                        handler: function () {
                            if (tree.getSelectionModel().selNode) {
                                if (tree.getSelectionModel().selNode.leaf == true) {
                                    var id = tree.getSelectionModel().selNode.id;
                                    var text = tree.getSelectionModel().selNode.text;
                                    var typecode = tree.getSelectionModel().selNode.attributes.type;
                                    DeleteProductType({ 'ID': id, 'Name': text, 'TypeCode': typecode });
                                }
                            } else {
                                Ext.Msg.alert("警告", "操作有错误，请先选中节点,然后进行操作~");
                            }
                        }
                    }
                ]
            });

            tree.getRootNode().expand(true);
            tree.on('click', function (node, e) {
                node.ui.addClass("x-tab-panel-body");
            });

            Ext.onReady(function () {

                Ext.QuickTips.init();

                var window = new Ext.Window({
                    title: '产品类型管理',
                    closable: false,
                    width: "100%",
                    height: "100%",
                    maximized: true,
                    layout: 'hbox',
                    layoutConfig: {
                        align: 'stretch',
                        pack: 'start',
                    },
                    plain: true,
                    bodyStyle: 'margin:2px;padding:5px;',
                    buttonAlign: 'center',
                    items: [tree, grid],
                });


                store.load();

                window.show();

            });

