@{
    ViewBag.Title = "页面管理";
}

@section Head
{

    <script type="text/javascript">
        function Update(data) {

            var formpanel = new Ext.form.FormPanel({
                baseCls: 'x-plain',
                autoHeight: true,
                autoWidth: true,
                layout: 'form',
                defaultType: 'textfield',
                items: [
                    
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: '页面名称',
                        id: 'PageName',
                         labelWidth: 50,
                },
                 {
                     xtype: 'textfield',
                     readOnly: false,
                     fieldLabel: '页面编号',
                     id: 'PageCode',
                     labelWidth: 50,
                 },
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: 'URL连接',
                        id: 'URL',
                        labelWidth: 50,
                    },
                    {
                        xtype: 'hidden',
                        id: 'ID'
                    }]
            });
            var updatewin = new Ext.Window({
                modal: true,
                title: '添加菜单',
                closable: false,
                width: 600,
                height: 400,
                maximized: false,
                layout: 'form',
                plain: true,
                items: formpanel,
                buttons: [{
                    text: '保存',
                    handler: function () {
                        Ext.Ajax.request({
                            waitMsg: '正在提交...',
                            url: '@Url.Content("~/Page/Update")',
                            params: {
                                PageName: Ext.getDom("PageName").value,
                                PageCode: Ext.getDom("PageCode").value,
                                URL: Ext.getDom("URL").value,
                                ID: Ext.getDom("ID").value
                            },
                            success: function (form, action) {
                                Ext.Msg.alert("网站信息：", '亲~,恭喜你，保存成功~');
                                store.load();
                            },
                            failure: function (form, action) {
                                Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");
                            }
                        });
                    }
                }, {
                    text: '关闭',
                    handler: function () {
                        updatewin.close();
                    }
                }]
            });
            updatewin.show();

            Ext.getDom("ID").value = data.ID;

            Ext.getDom("PageName").value = data.PageName;

            Ext.getDom("PageCode").value = data.PageCode;
            
            Ext.getDom("URL").value = data.URL;
        }

        function Add() {

            var formpanel = new Ext.form.FormPanel({
                baseCls: 'x-plain',
                autoHeight: true,
                autoWidth: true,
                layout: 'form',
                defaultType: 'textfield',
                items: [
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: '页面名称',
                        id: 'PageName',
                        labelWidth: 50,
                    },
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: '页面编号',
                        id: 'PageCode',
                        labelWidth: 50,
                    },
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: 'URL连接',
                        id: 'URL',
                        labelWidth: 50,
                    },
                    {
                        xtype: 'hidden',
                        id: 'ID'
                    }]
            });
            var updatewin = new Ext.Window({
                modal: true,
                title: '添加菜单',
                closable: false,
                width: 600,
                height: 400,
                maximized: false,
                layout: 'form',
                plain: true,
                items: formpanel,
                buttons: [{
                    text: '保存',
                    handler: function () {
                        Ext.Ajax.request({
                            waitMsg: '正在提交...',
                            url: '@Url.Content("~/Page/Add")',
                                params: {
                                    PageName: Ext.getDom("PageName").value,
                                    URL: Ext.getDom("URL").value,
                                    ID: Ext.getDom("ID").value,
                                    PageCode: Ext.getDom("PageCode").value
                                },
                                success: function (form, action) {
                                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，保存成功~');
                                    store.load();
                                },
                                failure: function (form, action) {
                                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");
                                }
                            });
                        }
                }, {
                    text: '关闭',
                    handler: function () {
                        updatewin.close();
                    }
                }]
            });
                updatewin.show();

            }

            function Delete(data) {

                Ext.Ajax.request({
                    waitMsg: '正在提交...',
                    url: '@Url.Content("~/Page/Delete")',
                params: {
                    URL: data.URL,
                    PageName: data.PageName,
                    ID: data.ID,
                    PageCode: data.PageCode
                },
                success: function (form, action) {
                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，删除成功~');
                    store.load();
                },
                failure: function (form, action) {
                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据删除失败~");
                }
            });
        }

        var store = new Ext.data.Store({
            proxy: new Ext.data.HttpProxy({
                url: "@Url.Content("~/Page/List")",
            }
            ),
            reader: new Ext.data.JsonReader({},
                [
                    { name: 'ID' },
                    { name: 'PageName' },
                    { name: 'PageCode' },
                    { name: 'URL' }
                ]
            )
        });

        var grid = new Ext.grid.GridPanel({
            width: 700,
            height: 500,
            title: '菜单列表',
            store: store,
            columnLines: true,
            trackMouseOver: false,
            disableSelection: true,
            loadMask: true,
            columns: [
                { id: 'ID', header: "ID", dataIndex: 'ID', width: 10, sortable: true },
                { header: "页面名称", dataIndex: 'PageName', width: 20, hidden: false, sortable: true },
                { header: "页面编码", dataIndex: 'PageCode', width: 20, hidden: false, sortable: true },
                { header: "URL地址", dataIndex: 'URL', width: 20, align: 'right', sortable: true },
                {
                    header: '操作',
                    width: 20,
                    dataIndex: 'ID',
                    align: "center",
                    renderer: function (data, cellmeta, record) {
                        var returnStr = "<INPUT type='button' id='btnAdd' value='增加' onclick='Add()' />  <INPUT type='button' id='btnUpdate' value='修改' onclick='Update(" + Ext.encode(record.data) + ")' /> <INPUT type='button' value='删除' id='btnDelete' onclick='Delete(" + Ext.encode(record.data) + ")'/>";
                        return returnStr;
                    }
                }
            ],
            viewConfig: {
                loadMask: true,
                forceFit: true
            },
            tbar: new Ext.Toolbar([{
                text: '添加页面',
                icon: 'icons/add.gif',
                handler: function () {
                    Add();
                }
            }]),
            bbar: new Ext.PagingToolbar({
                pageSize: 50,
                store: store,
                displayInfo: true,
                displayMsg: '当前{0}到{1}条,共{2}条',
                emptyMsg: '没有符合条件的数据'
            })
        });

        Ext.onReady(function () {

            Ext.QuickTips.init();

            var window = new Ext.Window({
                title: '菜单管理',
                closable: false,
                width: 800,
                height: 600,
                minWidth: 600,
                minHeight: 500,
                maximized: true,
                layout: 'fit',
                plain: true,
                bodyStyle: 'margin:2px;padding:5px;',
                buttonAlign: 'center',
                items: grid,
            });


            store.load();

            window.show();

        });

    </script>
}


