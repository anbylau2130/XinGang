@{
    ViewBag.Title = "内容管理";
}
@section Head
{
    <script type="text/javascript">
        var comboStore = new Ext.data.Store({
            autoLoad: true,
            proxy: new Ext.data.HttpProxy({
                url: '@Url.Content("~/Product/ProductTypeList")'
            }),
            reader: new Ext.data.JsonReader({
                fields: ['Name', 'ID']
            })
        });


        function UpdateProduct(data) {
            var formpanel = new Ext.form.FormPanel({
                baseCls: 'x-plain',
                autoHeight: true,
                autoWidth: true,
                layout: 'form',
                defaultType: 'textfield',
                items: [
                     {
                         xtype: 'combo',
                         readOnly: false,
                         fieldLabel: '产品类型',
                         forceSelection: true,
                         editable: false,
                         valueField: 'ID',
                         displayField: 'Name',
                         labelWidth: 50,
                         mode: "remote",
                         triggerAction: 'all',
                         //listWidth: 200,
                         store: comboStore,
                         id: 'ProductTypeID',
                     },
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: '产品名称',
                        id: 'Name',
                        labelWidth: 50,
                    },
                     {
                         xtype: 'textfield',
                         readOnly: false,
                         fieldLabel: '产品编号',
                         id: 'Code',
                         labelWidth: 50,
                     }, {
                         xtype: 'textfield',
                         readOnly: false,
                         fieldLabel: '图片路径',
                         id: 'PicURL',
                         labelWidth: 50,
                     },
                     {
                         xtype: 'textfield',
                         readOnly: false,
                         fieldLabel: '价格',
                         id: 'Price',
                         labelWidth: 50,
                     }, {
                         xtype: 'htmleditor',
                         readOnly: false,
                         fieldLabel: '产品介绍',
                         id: 'Instruction',
                         labelWidth: 50,
                     },
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: '备注信息',
                        id: 'Remark',
                        labelWidth: 50,
                    },
                    {
                        xtype: 'hidden',
                        id: 'ID'
                    }]
            });
            var updatewin = new Ext.Window({
                modal: true,
                title: '修改产品',
                closable: false,
                width: 600,
                height: 400,
                maximized: false,
                layout: 'form',
                plain: true,
                items: formpanel,
                buttons: [{
                    text: '保存',
                    handler: function () {
                        Ext.Ajax.request({
                            waitMsg: '正在提交...',
                            url: '@Url.Content("~/Product/UpdateProduct")',
                            params: {
                                Name: Ext.getDom("Name").value,
                                Code: Ext.getDom("Code").value,
                                PicURL: Ext.getDom("PicURL").value,
                                Price: Ext.getDom("Price").value,
                                Instruction: Ext.util.Format.htmlEncode(Ext.getCmp("Instruction").getValue()),
                                Remark: Ext.getDom("Remark").value,
                                ID: Ext.getDom("ID").value,
                                ProductTypeID: Ext.getCmp("ProductTypeID").getValue()
                            },
                            success: function (form, action) {
                                Ext.Msg.alert("网站信息：", '亲~,恭喜你，保存成功~');
                                store.load();
                            },
                            failure: function (form, action) {
                                Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");
                            }
                        });
                    }
                }, {
                    text: '关闭',
                    handler: function () {
                        updatewin.close();
                    }
                }]
            });
            updatewin.show();

            Ext.getDom("Name").value = data.Name;
            Ext.getDom("Code").value = data.Code;
            Ext.getDom("PicURL").value = data.PicURL;
            Ext.getDom("Price").value = data.Price;
            Ext.getCmp("Instruction").setValue(Ext.util.Format.htmlDecode(Ext.util.Format.htmlDecode(data.Instruction)));
            Ext.getDom("Remark").value = data.Remark;
            Ext.getDom("ID").value = data.ID;
            Ext.getCmp("ProductTypeID").setValue(data.ProductTypeID)
        }

        //增加菜单

