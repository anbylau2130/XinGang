@{
    ViewBag.Title = "title";
}

@section Head
{
           
        <script type="text/javascript">
      
        function Update(data) {
           
            var formpanel = new Ext.form.FormPanel({
                
                baseCls: 'x-plain',
                autoHeight: true,
                autoWidth: true,
                layout: 'form',
                defaultType: 'textfield',
                items: [
                    {
                        xtype: 'textfield',
                        readOnly: false,
                        fieldLabel: '标题',
                        id: 'Title',
                        labelWidth: 50,
                    },
                     {
                         xtype: 'textfield',
                         readOnly: false,
                         fieldLabel: '排序',
                         id: 'Order',
                         labelWidth: 50,
                     }, {
                         fieldLabel: '使用状态',
                         id: 'InUse',
                         xtype: "combo",
                         editable: false,//默认为true，false为禁止手写和联想功能
                         store: new Ext.data.SimpleStore({
                             fields: ["id", "name"],
                             data: [["true", "true"], ["false", "false"]]
                         }),
                         mode: 'local',//指定数据加载方式，如果直接从客户端加载则为local，如果从服务器断加载 则为remote.默认值为：remote
                         typeAhead: true,
                         triggerAction: 'all',
                         valueField: 'id',
                         displayField: 'name',
                         selectOnFocus: true,
                         width: 200,
                         frame: true,
                         resizable: false

                     },
                    {
                        xtype: 'label',
                        fieldLabel: '信息内容',
                        labelWidth: 50,
                    },
                    {
                        xtype: 'htmleditor',
                        height: 200,
                        hideLabel: true,
                        id: 'Content',
                        labelWidth: 50,
                    },
                    {
                        xtype: 'hidden',
                        id: 'CreateTime',
                    }, {
                        xtype: 'hidden',
                        id: 'UpdateTime'
                    },
                    {
                        xtype: 'hidden',
                        id: 'ID'
                    }]
            });
            var updatewin = new Ext.Window({
                modal: true,
                title: '信息管理',
                closable: false,
                width: 600,
                height: 400,
                maximized: false,
                layout: 'form',
                plain: true,
                items: formpanel,
                buttons: [{
                    text: '保存',
                    handler: function () {
                        Ext.Ajax.request({
                            waitMsg: '正在提交...',
                            url: '@Url.Content("~/Message/Update")',
                                params: {
                                    ID: Ext.getDom("ID").value,
                                    Title: Ext.getDom("Title").value,
                                    Content: Ext.util.Format.htmlEncode(Ext.getCmp("Content").getValue()),
                                    Order: Ext.getDom("Order").value,
                                    CreateTime: Ext.getDom("CreateTime").value,
                                    UpdateTime: Ext.getDom("UpdateTime").value,
                                    InUse: Ext.getCmp("InUse").getValue()
                                },
                                success: function(form, action) {
                                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，保存成功~');
                                    store.load();
                                },
                                failure: function(form, action) {
                                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");

                                }
                            });
                        }
                           
                }, {
                    text: '关闭',
                    handler: function () {
                        updatewin.close();
                    }
                }]
            });
            updatewin.show();
            
            Ext.getDom("ID").value = data.ID;
           
            Ext.getDom("Title").value = data.Title;
            
            Ext.getCmp("Content").setValue(Ext.util.Format.htmlDecode(data.Content));
            
            Ext.getDom("Order").value = data.Order;
           
            Ext.getDom("CreateTime").value = data.CreateTime;
               
            if (data.InUse == true)
                Ext.getCmp("InUse").setValue("true");
            else
                Ext.getCmp("InUse").setValue("false");
            
          
        }

            function Add() {
                
                var formpanel = new Ext.form.FormPanel({
                    baseCls: 'x-plain',
                    autoHeight: true,
                    autoWidth: true,
                    layout: 'form',
                    defaultType: 'textfield',
                    items: [
                        {
                            xtype: 'textfield',
                            readOnly: false,
                            fieldLabel: '标题',
                            id: 'Title',
                            labelWidth: 50,
                        },
                         {
                             xtype: 'textfield',
                             readOnly: false,
                             fieldLabel: '排序',
                             id: 'Order',
                             labelWidth: 50,
                         }, {
                             fieldLabel: '使用状态',
                             id: 'InUse',
                             xtype: "combo",
                             editable: false,//默认为true，false为禁止手写和联想功能
                             store: new Ext.data.SimpleStore({
                                 fields: ["id", "name"],
                                 data: [["true", "true"], ["false", "false"]]
                             }),
                             mode: 'local',//指定数据加载方式，如果直接从客户端加载则为local，如果从服务器断加载 则为remote.默认值为：remote
                             typeAhead: true,
                             triggerAction: 'all',
                             valueField: 'id',
                             displayField: 'name',
                             selectOnFocus: true,
                             width: 200,
                             frame: true,
                             resizable: false

                         },
                        {
                            xtype: 'label',
                            fieldLabel: '信息内容',
                            labelWidth: 50,
                        },
                        {
                            xtype: 'htmleditor',
                            height: 200,
                            hideLabel: true,
                            id: 'Content',
                            labelWidth: 50,
                        },
                        {
                            xtype: 'hidden',
                            id: 'CreateTime',
                        }, {
                            xtype: 'hidden',
                            id: 'UpdateTime'
                        },
                        {
                            xtype: 'hidden',
                            id: 'ID'
                        }]
                });
                var updatewin = new Ext.Window({
                    modal: true,
                    title: '信息管理',
                    closable: false,
                    width: 600,
                    height: 400,
                    maximized: false,
                    layout: 'form',
                    plain: true,
                    items: formpanel,
                    buttons: [{
                        text: '保存',
                        handler: function () {
                            Ext.Ajax.request({
                                waitMsg: '正在提交...',
                                url: '@Url.Content("~/Message/Add")',
                            params: {
                                ID: Ext.getDom("ID").value,
                                Title: Ext.getDom("Title").value,
                                Content: Ext.util.Format.htmlEncode(Ext.getCmp("Content").getValue()),
                                Order: Ext.getDom("Order").value,
                                CreateTime: Ext.getDom("CreateTime").value,
                                UpdateTime: Ext.getDom("UpdateTime").value,
                                InUse: Ext.getCmp("InUse").getValue()
                            },
                            success: function (form, action) {
                                Ext.Msg.alert("网站信息：", '亲~,恭喜你，保存成功~');
                               
                                store.load();
                            },
                            failure: function (form, action) {
                                Ext.Msg.alert('异常警告：', "亲~，不好意思，数据保存失败~");
                                
                            }
                        });
                    }

                }, {
                    text: '关闭',
                    handler: function () {
                        updatewin.close();
                    }
                }]
            });
            updatewin.show();

            Ext.getCmp("InUse").setValue("true");

        }

        function Delete(data) {
         
            Ext.Ajax.request({
                waitMsg: '正在提交...',
                url: '@Url.Content("~/Message/Delete")',
                params: {
                    ID: data.ID,
                    Title: data.Title,
                    Content: data.Content,
                    Order: data.Order,
                    CreateTime: data.CreateTime,
                    UpdateTime: data.UpdateTime,
                    InUse: data.InUse
                },
                success: function (form, action) {
                    Ext.Msg.alert("网站信息：", '亲~,恭喜你，删除成功~');
                    store.load();
                },
                failure: function (form, action) {
                    Ext.Msg.alert('异常警告：', "亲~，不好意思，数据删除失败~");
                }
            });
        }


        var store = new Ext.data.Store({
            proxy: new Ext.data.HttpProxy({
                url: "@Url.Content("~/Message/List")",
            }
                ),
            reader: new Ext.data.JsonReader({},
                [
                    { name: 'ID' },
                    { name: 'Content' },
                    { name: 'Order' },
                    { name: 'InUse' },
                    { name: "Title" },
                    { name: 'CreateTime' },
                    { name: 'UpdateTime' }
                ]
            )
        });

            var grid = new Ext.grid.GridPanel({
                width: 700,
                height: 500,
                title: '信息列表',
                store: store,
                columnLines: true,
                trackMouseOver: false,
                disableSelection: true,
                loadMask: true,
                columns: [
                    { id: 'ID', header: "ID", dataIndex: 'ID', width: 5, sortable: true },
                    { header: "标题", dataIndex: 'Title', width: 10, hidden: false, sortable: true },
                    { header: "页面内容", dataIndex: 'Content', width: 10, hidden: false, sortable: true },
                    { header: "排序", dataIndex: 'Order', width: 10, align: 'right', sortable: true },
                    { header: "是否显示", dataIndex: 'InUse', width: 10, sortable: true },
                    { header: "创建时间", dataIndex: 'CreateTime', width: 10, sortable: true },
                    { header: "修改时间", dataIndex: 'UpdateTime', width: 10, sortable: true },
                    {
                        header: '操作',
                        width: 20,
                        dataIndex: 'ID',
                        align: "center",
                        renderer: function (data, cellmeta, record) {
                            var returnStr = "<INPUT type='button' id='btnAdd' value='增加' onclick='Add()' />  <INPUT type='button' id='btnUpdate' value='修改' onclick='Update(" + Ext.encode(record.data) + ")' /> <INPUT type='button' value='删除' id='btnDelete' onclick='Delete(" + Ext.encode(record.data) + ")'/>";
                            return returnStr;
                        }
                    }
                ],
                viewConfig: {
                    loadMask: true,
                    forceFit: true
                },
                bbar: new Ext.PagingToolbar({
                    pageSize: 50,
                    store: store,
                    displayInfo: true,
                    displayMsg: '当前{0}到{1}条,共{2}条',
                    emptyMsg: '没有符合条件的数据'
                })
            });

            Ext.onReady(function () {

                Ext.QuickTips.init();

          
                var window = new Ext.Window({
                    title: '信息管理',
                    closable: false,
                    width: 800,
                    height: 600,
                    minWidth: 600,
                    minHeight: 500,
                    maximized: true,
                    layout: 'fit',
                    plain: true,
                    bodyStyle: 'margin:2px;padding:5px;',
                    buttonAlign: 'center',
                    items: grid,
                });


                store.load();

                window.show();

            });

    
    </script>
}
